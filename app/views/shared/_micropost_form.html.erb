
<div class="row-fluid">

<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>


 <center>
     <%= f.text_field :title, placeholder: "Title of offer", class: "textinput" %>
 <br><%= f.text_area :content, placeholder: "Describe your current trending offer for your brand...", class: "textfield", :size =>"50x5" %><br>
<%= f.submit "       Post new offer       ", class: "btn btn-success" %></center>
<% end %>
</div>