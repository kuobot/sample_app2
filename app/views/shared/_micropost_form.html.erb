
<div class="row-fluid">

<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>


 <center>
     <%= f.text_field :title, placeholder: "Title of event", class: "textinput" %>
 <br><%= f.text_area :content, placeholder: "Please provide a description", class: "textfield", :size =>"50x5" %><br>
<%= f.submit "       Post this event now!       ", class: "btn btn-success" %></center>
<% end %>
</div>