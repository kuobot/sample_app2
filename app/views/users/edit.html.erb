<% provide(:title, "Edit user") %> 

<div class="row-fluid">
  <span class="span6">

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>


      <%= f.label :name, "Group Name:" %>
      <%= f.text_field :name %>

      <%= f.label :description, "Describe the group:" %>
      <%= f.text_area :description %>

      <%= f.label :tags, "What do you love?" %>
      <%= f.text_field :tags %>

      <%= f.label :website, "You can be found online at:" %>
      <%= f.text_field :website %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>


      <%= f.submit "Save changes", class: "btn" %>
</span>  <span class="span6"></span>
</div>
    <% end %>
