<% provide(:title, @user.name) %>

<div class="container-fluid">
  <div class="row-fluid">
    <span class="span3">
      <div class="well">
        <div class="title">
        <%= @user.name %>
        </div>
        <%= render 'follow_form' if signed_in? %>
        <p>
        <%= @user.description %>
        </p>
    <%= render 'shared/stats' %> 
      </div>
    </span>
    <span class="span9">
      <div class="well">
        <% if @user.microposts.any? %>
          <%= render @microposts %>
          <%= will_paginate @microposts %>
        <% else %>
          <div class="empty">

        <% if current_user?(@user) %>
          You have no asks for help yet. <%= link_to 'Create one now', help_path %>
        <% else %>
          It's hard to believe this person doesn't need anything! To score bonus points, surprise them by contacting them out of the blue. Now, that's a novel concept these days, right?
          </div>
        <% end %>
      </div>
    </span>
  </div>
</div>
<% end %>
      