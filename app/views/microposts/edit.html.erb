<% provide(:title, "Edit micropost") %> 


<div class="container-fluid">
  <div class="well">

<div class="row-fluid">
  <span class="span6">
    
<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

     <%= f.text_field :title, placeholder: "Title of event or notice", class: "textinput" %>
 <br><%= f.text_area :content, placeholder: "Please provide a description", class: "textfield" %><br>

      <%= f.submit "Save changes", class: "btn" %>
</span>
</div>
</div>
</div>
    <% end %>




